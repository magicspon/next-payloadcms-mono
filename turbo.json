{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [
				".next/**",
				"!.next/cache/**",
				"dist/**",
				"storybook-static/**"
			]
		},
		"lint": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"storybook": {
			"cache": false,
			"persistent": true
		}
	},
	"globalEnv": [
		"CI",
		"PAYLOAD_SECRET",
		"DATABASE_URI",
		"PAYLOAD_SEED",
		"VERCEL_ENV"
	]
}
